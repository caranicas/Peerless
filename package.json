{
  "name": "@peerless/core",
  "version": "0.1.0",
  "description": "React context and hooks that wrap PeerJS",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "tsc --noEmit",
    "prepare": "npm run build",
    "demo": "cd examples/debug && vite --open /host",
    "demo:open": "node -e \"setTimeout(() => { require('child_process').exec('start http://localhost:3000/host && timeout /t 1 && start http://localhost:3000/client'); }, 2000)\"",
    "demo:build": "cd examples/debug && vite build",
    "demo:preview": "cd examples/debug && vite preview"
  },
  "keywords": ["peerjs", "react", "hooks", "webrtc"],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=17",
    "react-dom": ">=17"
  },
  "dependencies": {
    "peerjs": "^1.5.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.22",
    "@vitejs/plugin-react": "^4.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.4.3",
    "vite": "^5.2.0"
  }
}
